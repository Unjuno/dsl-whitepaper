{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DSL Audit Set Schema",
  "description": "監査セットの形式定義",
  "type": "object",
  "required": [
    "audit_id",
    "version",
    "test_cases"
  ],
  "properties": {
    "audit_id": {
      "type": "string",
      "description": "監査セットID"
    },
    "version": {
      "type": "string",
      "description": "バージョン",
      "pattern": "^v\\d+$"
    },
    "test_cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "input",
          "expected_format",
          "verifier_config"
        ],
        "properties": {
          "input": {
            "type": "string",
            "description": "入力例"
          },
          "expected_format": {
            "type": "string",
            "enum": [
              "json_schema",
              "unit_test",
              "static_analysis",
              "rule_check"
            ],
            "description": "期待される形式"
          },
          "verifier_config": {
            "type": "object",
            "description": "verifier設定"
          },
          "expected_output": {
            "type": "string",
            "description": "期待される出力（オプション）"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        }
      }
    }
  }
}
